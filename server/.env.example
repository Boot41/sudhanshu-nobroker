# Copy this file to .env and fill in real values for local/dev and Docker runtime

# ---- App ----
APP_NAME=NoBroker API
APP_VERSION=1.0.0
APP_DESCRIPTION=Property rental platform API
ENVIRONMENT=development
DEBUG=true

# ---- JWT ----
# Generate a strong secret for production (e.g., openssl rand -hex 32)
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ---- Database (pick ONE approach) ----
# Option A: provide a DATABASE_URL directly (preferred in Docker)
# Example for Postgres container named nb-pg on the same Docker network
# DATABASE_URL=postgresql+psycopg2://nb:nb@nb-pg:5432/nb

# Option B: provide components; config will build DATABASE_URL automatically
 DB_HOST=localhost
 DB_PORT=5432
 DB_NAME=property_rental_db
 DB_USER=rental_app_user
 DB_PASSWORD=change-me

# Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
